<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_56dp"
    android:background="@color/light_grey"
    tools:targetApi="lollipop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_hamburger"
            android:layout_width="@dimen/dp_24dp"
            android:layout_height="@dimen/dp_24dp"
            android:src="@drawable/icon_hamburger"/>

        <TextView
            android:id="@+id/txt_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16dp"
            android:textStyle="bold"
            android:singleLine="true"
            android:textColor="@color/dark_grey"
            android:text="News"
            android:textSize="@dimen/sp_18sp" />
    </LinearLayout>
</androidx.appcompat.widget.Toolbar>
